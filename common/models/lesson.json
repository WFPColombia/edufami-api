{
  "name": "Lesson",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "string"
    },
    "order": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "status": {
      "type": "string",
      "default": "draft"
    },
    "visible": {
      "type": "boolean",
      "default": true
    },
    "created": {
      "type": "date"
    },
    "edited": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "StaffUser",
      "foreignKey": "ownerId"
    },
    "unit": {
      "type": "belongsTo",
      "model": "Unit",
      "foreignKey": ""
    },
    "steps": {
      "type": "hasMany",
      "model": "Step",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {}
}
