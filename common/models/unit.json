{
  "name": "Unit",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "string"
    },
    "objective": {
      "type": "string"
    },
    "order": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "status": {
      "type": "string",
      "default": "draft"
    },
    "visible": {
      "type": "boolean",
      "default": true
    },
    "created": {
      "type": "date"
    },
    "edited": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "StaffUser",
      "foreignKey": "ownerId"
    },
    "training": {
      "type": "belongsTo",
      "model": "Training",
      "foreignKey": "trainingId"
    },
    "lessons": {
      "type": "hasMany",
      "model": "Lesson",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
