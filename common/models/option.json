{
  "name": "Option",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "text": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "string"
    },
    "isCorrect": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "feedback": {
      "type": "string"
    },
    "column": {
      "type": "number"
    },
    "pair": {
      "type": "number",
      "default": 0
    },
    "visible": {
      "type": "boolean",
      "default": true
    },
    "created": {
      "type": "date"
    },
    "edited": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "StaffUser",
      "foreignKey": "ownerId"
    },
    "step": {
      "type": "belongsTo",
      "model": "Step",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {}
}
